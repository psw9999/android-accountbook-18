<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_accountbook_18" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_40</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightPurple</item>
        <item name="colorSecondaryVariant">@color/purple_40</item>
        <item name="colorOnSecondary">@color/off_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/off_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/off_white</item>
        <item name="colorSurface">@color/off_white</item>
        <item name="android:textColorPrimary">@color/purple</item>
        <item name="android:textColor">@color/purple</item>
        <item name="bottomNavigationStyle">@style/bottomNavigationColor</item>
        <item name="android:datePickerStyle">@style/date_picker</item>
    </style>
</resources>

